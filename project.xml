  </repository>

  <siteAddress>neuclear.org</siteAddress>
  <siteDirectory>/home/sites/neuclear.org/public_html/commons/</siteDirectory>
  <issueTrackingUrl>http://devone.veraxpay.com:9090</issueTrackingUrl>
  <mailingLists>
    <mailingList>
      <name>NeuDist Announce</name>
