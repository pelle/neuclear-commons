    <build>
        <sourceDirectory>src/java</sourceDirectory>

        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*Test.java</exclude>
            </excludes>
        </unitTest>

        <resources>
            <resource>
                <directory>
                      src/java
                </directory>
                <includes>
                    <include>**/*.png</include>
                    <include>**/*.gif</include>
                    <include>**/*.jpg</include>
                    <include>**/*.jks</include>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                    <include>LICENSE.txt</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>

    </build>
